<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.4.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.4.xsd http://nifty-gui.sourceforge.net/nifty-1.4.xsd">

	<useStyles filename="nifty-default-styles.xml" />
	<useControls filename="nifty-default-controls.xml" />

	<!-- intro screen -->
	<screen id="intro" controller="com.ATeam.twoDotFiveD.gui.SplashController"
		inputMapping="de.lessvoid.nifty.input.mapping.DefaultScreenMapping">
		<layer id="background" childLayout="center" backgroundColor="#000f">
			<effect>
				<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
					length="500" startDelay="1500" post="false" inherit="true"
					alternateEnable="exit" />
			</effect>
			<panel id="panel" childLayout="center"
				backgroundImage="src/main/resources/com/lovetextures/light-refraction-4.jpg"
				width="100%" height="100%">
				<effect>
					<onStartScreen name="fade" startColor="#fff0"
						endColor="#ffff" length="1000" post="false" />
					<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
						length="500" startDelay="1500" post="false" inherit="true" />
					<!-- <onStartScreen name="playSound" sound="gong" startDelay="1400" 
						/> -->
				</effect>
				<panel align="center" valign="center" childLayout="vertical">
					<effect>
						<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
							length="500" startDelay="1500" post="false" inherit="true" />
					</effect>
					<!-- fiter="true" imageMode="resize:3,3,3,3,3,3,3,3,3,3,3,3" -->
					<image align="center" valign="center" fiter="true" height="200"
						width="200" filename="src/main/resources/com/ATeam/twoDotFiveD/images/emblem.png">
						<effect>
							<onStartScreen name="fade" startColor="#0000"
								endColor="#000f" length="500" startDelay="1500" post="false" />
						</effect>
					</image>
				</panel>
			</panel>
		</layer>
	</screen>

	<!-- intro credit screen -->
	<screen id="introcredits" controller="com.ATeam.twoDotFiveD.gui.SplashCreditController"
		inputMapping="de.lessvoid.nifty.input.mapping.DefaultScreenMapping">
		<layer id="background" childLayout="center" backgroundColor="#000f">
			<effect>
				<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
					length="500" startDelay="1500" post="false" inherit="true"
					alternateEnable="exit" />
			</effect>
			<panel id="panel" childLayout="vertical"
				backgroundImage="src/main/resources/com/lovetextures/light-refraction-2.jpg"
				width="100%" height="100%">
				<effect>
					<onStartScreen name="fade" startColor="#fff0"
						endColor="#ffff" length="1000" post="false" />
					<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
						length="500" startDelay="1500" post="false" inherit="true" />
					<!-- <onStartScreen name="playSound" sound="gong" startDelay="1400" 
						/> -->
				</effect>
				<panel id="panel_top" height="20%" width="100%" align="center"
					childLayout="center">
				</panel>
				<panel id="middle" height="60%" width="100%" align="center"
					childLayout="vertical">
					<panel id="middle_top" height="50%" width="100%" align="center"
						childLayout="horizontal" backgroundColor="#00f8">
						<panel id="bullet" align="center" valign="center" height="50%"
							width="50%" backgroundColor="#44f8" childLayout="vertical">
							<effect>
								<onEndScreen name="fade" startColor="#ffff"
									endColor="#0000" length="500" startDelay="1500" post="false"
									inherit="true" />
							</effect>
							<!-- fiter="true" imageMode="resize:3,3,3,3,3,3,3,3,3,3,3,3" -->
							<image align="center" valign="center"
								filename="src/main/resources/cz/advel/jbullet/bullet_logo.png">
								<effect>
									<onStartScreen name="fade" startColor="#0000"
										endColor="#000f" length="500" startDelay="1500" post="false" />
								</effect>
							</image>
						</panel>
						<panel id="lwjgl" align="center" valign="center" height="50%"
							width="50%" backgroundColor="#44f8" childLayout="vertical">
							<effect>
								<onEndScreen name="fade" startColor="#ffff"
									endColor="#0000" length="500" startDelay="1500" post="false"
									inherit="true" />
							</effect>
							<!-- fiter="true" imageMode="resize:3,3,3,3,3,3,3,3,3,3,3,3" -->
							<image align="center" valign="center"
								filename="src/main/resources/com/lwjgl/lwjgl-logo.png">
								<effect>
									<onStartScreen name="fade" startColor="#0000"
										endColor="#000f" length="500" startDelay="3000" post="false" />
								</effect>
							</image>
						</panel>
					</panel>
					<panel id="middle_bottom" height="50%" width="100%" align="center"
						childLayout="horizontal" backgroundColor="#00f8">
						<panel id="niftygui" align="center" valign="center" height="100%"
							width="100%" backgroundColor="#44f8" childLayout="vertical">
							<effect>
								<onEndScreen name="fade" startColor="#ffff"
									endColor="#0000" length="500" startDelay="1500" post="false"
									inherit="true" />
							</effect>
							<!-- fiter="true" imageMode="resize:3,3,3,3,3,3,3,3,3,3,3,3" -->
							<image align="center" valign="center"
								filename="src/main/resources/demo-logo.png">
								<effect>
									<onStartScreen name="fade" startColor="#0000"
										endColor="#000f" length="500" startDelay="4500" post="false" />
								</effect>
							</image>
						</panel>
					</panel>
				</panel>
				<panel id="panel_bottom" height="20%" width="100%" align="center"
					childLayout="center">

				</panel>
			</panel>
		</layer>
	</screen>

	<!-- main menu screen -->
	<screen id="mainmenu" controller="com.ATeam.twoDotFiveD.gui.MainStartScreen">
		<layer id="background" backgroundColor="#003f" childLayout="center">
			<effect>
				<onStartScreen name="fade" startColor="#0000"
					endColor="#000f" length="500" startDelay="1500" post="false" />
			</effect>
			<!-- TODO find out best imageMode numbers -->
			<image filename="src/main/resources/com/lovetextures/cubes.jpg"></image>
		</layer>
		<layer id="foreground" childLayout="vertical">
			<effect>
				<onStartScreen name="fade" startColor="#0000"
					endColor="#000f" length="500" startDelay="2000" post="false" />
			</effect>
			<panel id="panel_top" height="25%" width="75%" align="center"
				childLayout="center" backgroundColor="#f008">
				<text text="2.5D" font="src/main/resources/menu.fnt" width="100%"
					height="100%" />
			</panel>
			<panel id="panel_mid" height="50%" width="75%" align="center"
				childLayout="center" backgroundColor="#0f08">
				<text text="text" font="src/main/resources/console.fnt" width="100%"
					height="100%" wrap="true" />
			</panel>
			<panel id="panel_bottom" height="25%" width="75%" align="center"
				childLayout="horizontal" backgroundColor="#00f8">
				<panel id="panel_bottom_left" height="50%" width="50%" valign="center"
					childLayout="center" backgroundColor="#44f8">
					<control name="button" label="Start" id="StartButton"
						align="center" valign="center">
						<interact onClick="changeScreen(hud)" />
						<effect>
							<onStartScreen name="move" mode="in" direction="top"
								length="300" startDelay="0" inherit="true" />
							<onEndScreen name="move" mode="out" direction="bottom"
								length="300" startDelay="0" inherit="true" />
							<onHover name="pulsate" scaleFactor="0.008" startColor="#f600"
								endColor="#ffff" post="true" />
						</effect>
					</control>
				</panel>
				<panel id="panel_bottom_right" height="50%" width="50%"
					valign="center" childLayout="center" backgroundColor="#88f8">
					<control name="button" label="Quit" id="QuitButton" align="center"
						valign="center">
						<interact onClick="exit()" />
					</control>
				</panel>
			</panel>
		</layer>
	</screen>
	<screen id="hud" controller="com.ATeam.twoDotFiveD.gui.HUDController">
		<layer id="hud-background" backgroundColor="#000f">
			<effect>
				<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
					length="500" startDelay="1500" post="false" inherit="true"
					alternateEnable="exit" />
			</effect>
			<interact onSecondaryClick="showMenu()" />
		</layer>
		<layer id="hud-foreground" backgroundColor="#0000" childLayout="horizontal">
			<effect>
				<onEndScreen name="fade" startColor="#ffff" endColor="#0000"
					length="500" startDelay="1500" post="false" inherit="true"
					alternateEnable="exit" />
			</effect>
			<panel id="panel_left" height="100%" width="80%" childLayout="vertical"
				backgroundColor="#0f08"></panel>
			<panel id="panel_right" height="100%" width="25%" childLayout="vertical"
				backgroundColor="#00f8">
				<panel id="panel_top_right1" height="15%" width="100%"
					childLayout="center" backgroundColor="#00f8">
					<control name="label" color="#000" text="123" width="100%"
						height="100%" />
				</panel>
				<panel id="panel_top_right2" height="15%" width="100%"
					childLayout="center" backgroundColor="#44f8"></panel>
				<panel id="panel_top_right" height="70%" width="100%"
					childLayout="center" backgroundColor="#88f8"></panel>
			</panel>
		</layer>
	</screen>
</nifty>